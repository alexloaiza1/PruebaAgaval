@model AgavalPruebaPart1.Models.DB.Cliente;



@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<script>alert("Recuerda que si el cliente tiene secciones y/o productos asociados no podra ser eliminado, elimine primero los productos o secciones")</script>


<h1>Eliminar</h1>

<h3 class="text-danger"> ¿Esta seguro de eliminar el empleado?</h3>
<hr />

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Clientes" method="post">
            <input type="hidden" asp-for="Idcliente" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Identificacion">Identificacion</label>
                <input class="form-control form-control-sm" asp-for="Identificacion" ype="text"  disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Telefono">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="Telefono" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Direccion">Dirección</label>
                <input class="form-control form-control-sm" asp-for="Direccion" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Email">Email</label>
                <input class="form-control form-control-sm" asp-for="Email" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Idtipo">Tipo Persona</label>
                <input class="form-control form-control-sm" asp-for="oTipoPersona.Nombre" type="text" disabled/>
            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit" onclick="show()">Eliminar</button>
               
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Clientes">Volver</a>

            </div>

        </form>

    </div>
</div>


