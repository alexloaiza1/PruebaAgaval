@model AgavalPruebaPart1.Models.DB.ViewModels.ClienteVM;


@{
    ViewData["Title"] = "Cliente_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oCliente.Idcliente==0)
{
    <h1> Crear Cliente  </h1>
}else{
    <h1>Editar Cliente</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Cliente_Detalle" asp-controller="Clientes" method="post">
            <input type="hidden" asp-for="oCliente.Idcliente" />

            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oCliente.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.Identificacion">Identificacion</label>
                <input class="form-control form-control-sm" asp-for="oCliente.Identificacion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.Telefono">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="oCliente.Telefono" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.Direccion">Dirección</label>
                <input class="form-control form-control-sm" asp-for="oCliente.Direccion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.Email">Email</label>
                <input class="form-control form-control-sm" asp-for="oCliente.Email" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.Idtipo">Tipo Persona</label>
                <select class="form-select form-select-sm" asp-for="oCliente.Idtipo" asp-items="@Model.oListaTipo">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oCliente.Idcliente == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Clientes">Volver</a>

            </div>

        </form>

    </div>
</div>
