@model IEnumerable<AgavalPruebaPart1.Models.DB.Proveedore>

@{
    ViewData["Title"] = "Index";
}

<h1 class="titulo bg-light">Gestion de Proveedores</h1>
<hr />
<p>
    <a class="btn btn-success btn-sm" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Idproveedor">Editar</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Idproveedor">Detalles</a> |
                    <a class="btn btn-danger btn-sm " asp-action="Delete" asp-route-id="@item.Idproveedor">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
