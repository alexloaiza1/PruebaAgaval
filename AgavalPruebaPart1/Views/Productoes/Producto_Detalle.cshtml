@model AgavalPruebaPart1.Models.DB.ViewModels.ProductosVM;
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProducto.Idproducto == 0)
{
    <h1> Crear Producto  </h1>

    <h5 class="text-danger"> Recuerda que para crear un producto debes tener un cliente registrado y asociarlo</h5>
}
else
{
    <h1>Editar Producto</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Producto_Detalle" asp-controller="Productoes" method="post">
            <input type="hidden" asp-for="oProducto.Idproducto" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Descripcion" type="text" />
            </div>

            

            <div class="mb-3">
                <label class="form-label" asp-for="oProducto.Idcliente">Cliente asociado</label>
                <select class="form-select form-select-sm" asp-for="oProducto.Idcliente" asp-items="@Model.oListaClientes">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oProducto.Idproducto == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Productoes">Volver</a>

            </div>

        </form>

    </div>
</div>


